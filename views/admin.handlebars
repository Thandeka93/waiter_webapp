<div class="container  admin">
<h1>NOLU'S COFFEE SHOP</h1>
<h2>Weekly Roster</h2>
<div class="grid">
<div id="mon">

<h3>Mon</h3>
{{#each monday}}
<p class="monP">{{this}}</p>

{{/each}}
</div>
<div id="tues">
<h3>Tues</h3>
{{#each tuesday}}
<p class="tueP">{{this}}</p>

{{/each}}
</div>
<div id="wed"><h3>Wed</h3>
{{#each wednsday}}
<p class="wedP">{{this}}</p>

{{/each}}
</div>
<div id="thur"><h3>Thur</h3>
{{#each thursday}}
<p class="thurP">{{this}}</p>

{{/each}}
</div>
<div id="fri"><h3>Fri</h3>
{{#each friday}}
<p class="friP">{{this}}</p>

{{/each}}
</div>
<div id="sat"><h3>Sat</h3>
{{#each saturday}}
<p class="satP">{{this}}</p>

{{/each}}
</div>
<div id="sun"><h3>Sun</h3>
{{#each sunday}}
<p class="sunP">{{this}}</p>

{{/each}}
</div>
</div>

  <div id="update">
  <h2> Update Schedule</h2>
  <div id="deleteWaiter">
  <h3 class="grey">Remove Waiter for a Chosen Day</h3>
  <form action="/removeWaiter" method="post">
    <select name="waiterDelete">
{{#each names}}
<option>{{this}}</option>
{{/each}}
</select>
<select name="deleteDay">
{{#each days}}
<option> {{this.day}}</option>
{{/each}}
</select>
  <button type="submit" id="remove">Remove</button>
</form>
</div>
<h3 class="grey">Shift Waiter to Another Day</h3>
  <form action="/update" method="post">
  <span>Move:</span>
  <select name="waiterName">
{{#each names}}
<option>{{this}}</option>
{{/each}}
</select>
<span>From:</span>
<select name="fromDay">
{{#each days}}
<option>{{this.day}}</option>
{{/each}}
</select>
<span>To:</span>
<select name="toDay">
{{#each days}}
<option> {{this.day}}</option>
{{/each}}
</select>
  <button type="submit"  id="updateBtn">Update Schedule</button>
  </div>
  </form>
  <form action="/clear" method="post">
  <button type="submit" id="clear">Reset</button>
</form>
</div>
<script>





// Add an event listener to the clear button
const clearButton = document.querySelector("#clear");

clearButton.addEventListener("click", function (e) {
  const clearData = window.confirm(
    "Are you sure you want to clear the schedule?\nThis will reset all schedules"
  );

  if (!clearData) {
    e.preventDefault();
  }
});

</script>






